# Downloading even stable version

FROM node:20-alpine

# Set the working directory
WORKDIR /frontend

# Copy package.json and package-lock.json
COPY ../../source-code/frontend/package*.json /frontend/
COPY ../../source-code/frontend/yarn.lock /frontend/

# Install dependencies
RUN yarn install

# Copy the rest of the application
COPY ../../source-code/frontend/ /frontend/

# Expose the backend port
EXPOSE 5173

# Command to run the backend
CMD [ "yarn", "dev" ]